{
    "typeName": "AWS::SES::ReceiptFilter",
    "description": "Resource schema for AWS::SES::ReceiptFilter.",
    "sourceUrl": "git@github.com:aws-cloudformation/aws-cloudformation-resource-providers-ses.git",
    "definitions": {
        "IpFilter": {
            "description": "A structure that provides the IP addresses to block or allow",
            "type": "object",
            "properties": {
                "Cidr": {
                    "description": "A single IP address or a range of IP addresses that you want to block or allow",
                    "type": "string",
                    "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/(3[0-2]|[1-2][0-9]|[0-9]))$"
                },
                "Policy": {
                    "description": "Indicates whether to block or allow incoming mail from the specified IP addresses",
                    "type": "string",
                    "enum": [
                        "Block",
                        "Allow"
                    ]
                }
            },
            "required": [
                "Cidr",
                "Policy"
            ]
        },
        "IpFilterName": {
            "description": "The name of the IP address filter.",
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]{0,64}$",
            "maxLength": 64
        }
    },
    "properties": {
        "Filter": {
            "type": "object",
            "properties": {
                "IpFilter": {
                    "$ref": "#/definitions/IpFilter"
                },
                "Name": {
                    "$ref": "#/definitions/IpFilterName"
                }
            },
            "required": [
                "IpFilter"
            ]
        }
    },
    "createOnlyProperties": [
        "/properties/Filter"
    ],
    "primaryIdentifier": [
        "/properties/Filter"
    ],
    "additionalProperties": false
}
